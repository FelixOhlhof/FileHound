<Window x:Class="PdfSearchWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PdfSearchWPF"
        mc:Ignorable="d"
        xmlns:usr="clr-namespace:PdfSearchWPF.Views"
        Title="MainWindow"
        Width="500"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        MaxHeight="{Binding WindowMaxHeight, Mode=TwoWay}"
        MinWidth="400"
        MinHeight="150"
        >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <usr:SearchBar DataContext="{Binding SearchBarVM}"/>
        <usr:SearchResultView DataContext="{Binding SearchResultVM}" Grid.Row="1" Margin="0, 10, 0, 0"/>
    </Grid>
</Window>
